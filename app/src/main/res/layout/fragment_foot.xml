<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/netmarble_b"
                android:text="2019년 5월 24일"
                android:textAlignment="center"
                android:textColor="#A6A6A6"
                android:textSize="10sp"
                android:id="@+id/tvYesterday"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/netmarble_b"
                android:text="2019년 5월 25일"
                android:textAlignment="center"
                android:textColor="#B8D9C0"
                android:textSize="15sp"
                android:id="@+id/tvToday"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/netmarble_b"
                android:text="2019년 5월 26일"
                android:textAlignment="center"
                android:textColor="#A6A6A6"
                android:textSize="10sp"
                android:id="@+id/tvTomorrow"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            map:cameraTargetLat="37.584"
            map:cameraTargetLng="126.925"
            map:cameraZoom="15" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnFab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#B8D9C0"
            android:src="@drawable/ic_add_24dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:pressedTranslationZ="12dp"
            android:background="#B8D9C0"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#ffffff"
            android:src="@drawable/search_button"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/btnFab"
            app:layout_constraintRight_toRightOf="parent"
            app:pressedTranslationZ="12dp"
            android:background="#B8D9C0"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabCal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|end"
            android:backgroundTint="#ffffff"
            android:src="@drawable/cal"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/fabSearch"
            app:layout_constraintRight_toRightOf="parent"
            app:pressedTranslationZ="12dp"
            android:background="#B8D9C0"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabToday"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:backgroundTint="#ffffff"
            android:scaleType="center"
            android:src="@drawable/today"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/fabCal"
            app:layout_constraintRight_toRightOf="parent"
            app:pressedTranslationZ="12dp"
            android:background="#B8D9C0"
            />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>